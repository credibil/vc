{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tauri:prelaunch",
            "dependsOrder": "sequence",
            "dependsOn": [
                "tauri:bundle",
                "tauri:vite",
            ]
        },
        {
            "label": "tauri:vite",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm",
            "args": [
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/vercre-wallet/examples/desktop"
            },
            // without this problemMatcher VSCode `dependsOn` tasks won't work
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        },
        {
            "label": "tauri:bundle",
            "type": "shell",
            "command": "make dev",
            "options": {
                "cwd": "${workspaceFolder}/vercre-wallet/examples/desktop"
            }
        },
        {
            "label": "tauri:kill",
            "command": "echo ${input:terminate}",
            "type": "shell"
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}